procedure TForm1.edt1KeyPress(Sender: TObject; var Key: Char);
begin
edt2.Text:='';

if rb1.Checked then if key in ['0','1',#8] then else key:=#0 else
if rb2.Checked then if key in ['0'..'7',#8] then else key:=#0 else
if rb3.Checked then if key in ['0'..'9',#8] then else key:=#0 else
if rb4.Checked then if key in ['0'..'9','A','B','C','D','E','F',#8] then else key:=#0 else
end;

procedure TForm1.btn2Click(Sender: TObject);
begin
Application.Title := 'Подробное решение';
if (rb1.Checked) and (rb6.Checked) then
ShowMessage('                                           Перевод числа '+edt1.Text+' из Двоичной в Восьмеричную'+#13#10+
''+#13#10+
'Чтобы перевести число из двочиной системы счисления в восьмеричную систему счисления,'+#13#10+
'нужно разбить число на тройки цифр,затем заменить полученные группы цифр соответству-'+#13#10+
'ющими им восьмеричными цифрмаи.'+#13#10+
''+#13#10+
'Разбиваем число на триады цифр:');

end;

